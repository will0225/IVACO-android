<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ECGPatchActivity">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/heart_rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate: -- bpm"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/respiratory_rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respiratory Rate: -- brpm"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ecg_data_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECG Data: --"
            android:textSize="18sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>